<html>
<body>
       
@{
      Html.RenderPartial("_HeaderNav");   
 }
<center><h1><u>Top News</u></h1></center>
<hr width="500px">
<div class="container">
  <div class="row">
  @for(var i = 0; i < @ViewBag.articlelength ; i++)
    {
     var id = @ViewBag.article.entries[@i].uid;
    <div class="col-sm-12">
      <div class="panel-primary">
        <div class="post-title">
        <a href="@Url.Action("News","Home",new{ id = id })">
        <h2>@ViewBag.article.entries[@i].title</h2></div>
        <div class="panel-body">
        <div class="col-sm-4">
        <a href="@Url.Action("News","Home", 
        new 
        {
           id = id
        })">
        
        <img src=@ViewBag.article.entries[@i].file.url class="img-responsive" style="width:100%" alt="Image">
        </a></div> 
        
        <div class="col-sm-6">
         <p>@ViewBag.article.entries[@i].article_description</p>
         
         </div>
              
        </div>
          <div class="panel-footer">Category : @ViewBag.article.entries[@i].category_type &nbsp;&nbsp;&nbsp;&nbsp;Date : @ViewBag.article.entries[@i].date</div>
      </div>
  </div>
  <br><br><hr size="1">
  }
     </div>
  
   
@{
      Html.RenderPartial("_FooterNav");   
 }
</body>
</html>
 